#include<stdio.h>
int main()
{
    int i,n,prime=1;
    printf("Enter the number:");
    scanf("%d",&n);
    if(n<=1)
    {
        prime=0;
    }
    else
    {
        for(i=2;i<=n/2;i++)
        {
            if(n%2==0)
            {
                prime=0;
                break;
            }
        }
    }
    printf("%d is %s prime Number,",n,prime?"a":"not a ");
    return 0;
}
